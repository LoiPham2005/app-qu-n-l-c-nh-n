<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".homeapp.note.screen.SeeAllActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        >

        <ImageView
            android:id="@+id/imgBackScreenNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"/>

        <ImageView
            android:id="@+id/imgEditScreenNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/edit2" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tvTimeScreenNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Time"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:background="@null"
        android:inputType="none"
        android:clickable="false"
        android:focusable="false"/>

    <TextView
        android:id="@+id/tvTitleScreenNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="title"
        android:inputType="text"
        android:background="@null"
        android:textSize="30dp"/>

    <TextView
        android:id="@+id/tvContentScreenNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:hint="content"
        android:inputType="textMultiLine"
        android:lines="20"
        android:gravity="top"
        android:scrollbars="vertical"
        android:textSize="20dp" />
</LinearLayout>