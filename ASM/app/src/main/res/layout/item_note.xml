<!--                android:layout_alignParentEnd="true"-->
<!--                android:layout_marginTop="39dp"-->
<!--                android:layout_marginEnd="25dp"-->
<!--                android:text="detail" />-->
        </RelativeLayout>
<!--    </LinearLayout>-->


</LinearLayout>