<!--        android:padding="10dp">-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_note"
            android:padding="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTitleNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/tvTimeNote"
                android:background="@null"
                android:hint="title"
                android:inputType="text"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/tvTimeNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/imgMenuVertical"
                android:background="@null"
                android:hint="Time"
                android:layout_marginRight="30dp"
                android:inputType="text"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/imgMenuVertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@null"
                android:src="@drawable/menu_vertical"
                android:inputType="text"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tvContentNote"
                android:layout_below="@id/tvTitleNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:hint="content"
                android:inputType="textMultiLine"

                android:lines="3"
                android:textSize="20dp" />
<!--             android:layout_toLeftOf="@id/btnDetail"-->

<!--            <Button-->
<!--                android:id="@+id/btnDetail"-->
<!--                android:layout_width="wrap_content"-->
